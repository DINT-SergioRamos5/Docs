<Window x:Class="Docs.NuevoDocumento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Docs"
        mc:Ignorable="d"
        Title="NuevoDocumento" Height="450" Width="800" Closing="Window_Closing">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Bottom" Content="Guardar Documento" Click="GuardarClick"></Button>
        <TextBox x:Name="EditorTextBox" AcceptsReturn="True"></TextBox>
    </DockPanel>
</Window>
